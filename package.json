{
  "name": "morg",
  "version": "0.1.0",
  "homepage": "./",
  "main": "main.js",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "seed": "node -r dotenv/config ./scripts/seed.js",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:build": "npm run build && electron-builder"
  },
  "build": {
    "appId": "com.morg",
    "files": [
      "next.config.js",
      "main.js",
      "public/**/*",
      ".next/**/*"
    ]
  },
  "dependencies": {
    "@heroicons/react": "^2.1.3",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.15",
    "@prisma/client": "^5.15.0",
    "@root/walk": "^1.1.0",
    "autoprefixer": "^10.4.19",
    "bcrypt": "^5.1.1",
    "clsx": "^2.1.1",
    "heroicons": "^2.1.3",
    "music-metadata": "^8.3.0",
    "next": "14.2.3",
    "node-taglib-sharp": "^5.2.3",
    "prettier": "^3.3.1",
    "prisma": "^5.15.0",
    "react": "^18",
    "react-color-palette": "^7.1.1",
    "react-dom": "^18",
    "react-refresh": "^0.14.2",
    "react-resizable": "^3.0.5",
    "react-table": "^7.8.0",
    "realtime-bpm-analyzer": "^4.0.2",
    "use-debounce": "^10.0.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/react-table": "^7.7.20",
    "concurrently": "^8.2.2",
    "electron": "^30.1.0",
    "electron-builder": "^25.0.0-alpha.9",
    "eslint": "^8",
    "eslint-config-next": "14.2.3",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.1",
    "typescript": "^5",
    "wait-on": "^7.2.0"
  },
  "prisma": {
    "seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts"
  },
  "config": {
    "forge": {
      "plugins": [
        [
          "@electron-forge/plugin-webpack",
          {
            "devServer": {
              "liveReload": false
            },
            "mainConfig": "./webpack.main.config.js",
            "renderer": {
              "config": "./webpack.renderer.config.js",
              "entryPoints": [
                {
                  "html": "./src/index.html",
                  "js": "./src/renderer.ts",
                  "name": "main_window",
                  "preload": {
                    "js": "./src/preload.ts"
                  }
                }
              ]
            }
          }
        ]
      ]
    }
  }
}
